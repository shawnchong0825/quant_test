{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@meme-lord/shared": [
                "packages/shared/src"
            ],
            "@meme-lord/shared/*": [
                "packages/shared/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}